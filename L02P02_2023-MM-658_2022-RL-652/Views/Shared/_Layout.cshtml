<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - L02P02_2023_MM_658_2022_RL_652</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/L02P02_2023_MM_658_2022_RL_652.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header class="w-100 bg-dark text-white py-4 text-center">
        <div class="container">
            <img src="~/images/logo.png" alt="Logo" class="mx-auto d-block mb-3" width="80" height="80" />
            <h1 class="h4 mb-2">Comentarios por Libros</h1>
            <p class="small text-light">
                Seleccione el autor -> Seleccione el Libro -> Se muestran los comentarios existentes -> Adicione un nuevo comentario
            </p>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1 bg-white py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="w-100 bg-dark text-white py-3 text-center">
        <div class="container">
            <p class="small text-light mb-1">2023-MM-658 - Juan José Magaña Moreira</p>
            <p class="small text-light mb-0">2022-RL-652 - NOMBRE DEL ALUMNO DOS</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
